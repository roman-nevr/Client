<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text=""
        android:textSize="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvGit"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etPassword"
        android:layout_above="@+id/btnGist" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="roman-nevr"
        android:textSize="20sp"
        android:id="@+id/etUserName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="client"
        android:textSize="20sp"
        android:id="@+id/etGitRepo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/pbGit"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        tools:visibility="visible"/>

    <Button
        android:text="Get User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGitGetUser"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Get Contributor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGitGetContributor"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnGitGetUser" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnGitGetContributor"
        android:id="@+id/btnLogin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:text="zaq12wsx"
        android:ems="10"
        android:layout_below="@+id/etUserName"
        android:layout_alignParentStart="true"
        android:id="@+id/etPassword"
        android:layout_toStartOf="@+id/etGitRepo"
        android:layout_alignEnd="@+id/etUserName" />

    <Button
        android:text="Gist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGitGetUser"
        android:layout_alignParentStart="true"
        android:id="@+id/btnGist" />
</RelativeLayout>